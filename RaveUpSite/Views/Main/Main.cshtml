@model RaveUpSite.Models.ViewModels.MainPageModel


<div class="slider">
    <div class="slider-img-box">
        <div class="slider-blur">
            <h1>ЛУЧШИЕ УСЛОВИЯ ДЛЯ АРЕНДЫ</h1>
        </div>
    </div>
</div>


<div class="container range padding">
    @foreach (var item in Model.NewItems)
    {
        <div class="col-sm-3 range-block">
            <div class="thumbnail">
                <img src="http://via.placeholder.com/350x150/212121" alt="" class="img-responsive">
                <p class="range-header font font-center">@item.Name</p>
                @*<div class="range-wrap">
                    <a href="" class="range-btn font btn btn-warning">check</a>
                </div>*@
            </div>
        </div>
    }
    
</div>

<div class="container-fluid recent margin">
    <div class="container">
        <div class="divider"></div>
        <h2 class="font-center">ПОПУЛЯРНОЕ</h2><br>
        @foreach (var item in Model.TopRatedItems)
        {
            <div class="col-xxs-12 col-md-3 col-sm-3 col-xs-6 wow flipInX panel panel-default" style="visibility: visible; animation-name: flipInX;">
                <div class="panel-body my_thumbnail" onclick="window.location='katalog/komplecty/komplekt-avellino'">
                    <img class=" img-responsive" src="http://via.placeholder.com/1200x1080/212121" title="@item.Name" alt="@item.Name">
                    <center><h4 class="items-name">@item.Name</h4></center>
                </div>
                <div class="panel-footer items-price"><center>38 000 руб.</center></div>
            </div>
        }
    </div>
</div>

