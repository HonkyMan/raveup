@model RaveUpSite.Models.ViewModels.LoginModel

<div class="container form">
    <form class="form-signin" asp-action="Login" method="post">
        <input type="hidden" asp-for="ReturnUrl"/>
        <h2 class="form-signin-heading"></h2>
        <label asp-for="Login" class="sr-only"></label>
        <input asp-for="Login" id="inputEmail" class="form-control" placeholder="Логин" required="" autofocus="">
        <label asp-for="Password" class="sr-only"></label>
        <input asp-for="Password" type="password" id="inputPassword" class="form-control" placeholder="Пароль" required="">
        @*<div class="checkbox">
            <label>
                <input type="checkbox" value="remember-me">
            </label>
        </div>*@
        <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
    </form>
</div>
